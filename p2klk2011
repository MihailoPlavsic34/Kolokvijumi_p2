#include <stdio.h>
#include <stdlib.h>
#include <math.h>
#include <time.h>
#define MAX 100

int main() 
{
	int n,s;
	float x[MAX], y[MAX];
	srand(time(NULL));
	while (1) {
		s = 0;
		printf("\n Unesite broj elemenata vasih nizova(0 za izlaz): \n");

		scanf("%d", &n);
		if (n == 0) break;
		if (n < 0 || n>MAX) {
			printf("Nemoguc unos probajte ponovo!"); break;
		}

		for (int i = 0; i < n; i++) {
			x[i] = rand() / ((float)RAND_MAX);

			y[i] = rand() / ((float)RAND_MAX);
		}

		printf("Niz x je: ");
		for (int i = 0; i < n; i++)
			printf("%f  ", x[i]);
		printf("\n");

		printf("Niz y je: ");
		for (int i = 0; i < n; i++)
			printf("%f  ", y[i]);

		for (int i = 0; i < (n - s); i++) {
			if (1 > (pow(x[i], 2) + pow(y[i], 2))) {
				++s;
				for (int j = i;j < n - (s + 1); j++) {
					x[j] = x[j + 1];
					y[j] = y[j + 1];
				}
				--i;
			}
		}


		printf("\n Uredjeni niz x je: \n");
		for (int i = 0; i < (n - s); i++) {
			printf("%f ", x[i]);
		}

		printf("\n Uredjeni niz y je: \n");
		for (int i = 0; i < (n - s); i++) {
			printf("%f ", y[i]);

		}
			printf("\n");
			for (int i = 0; i < 50; i++)
				printf("- ");
			printf("\n");
			for (int i = 0; i < 50; i++)
				printf("* ");
			printf("\n");
			for (int i = 0; i < 50; i++)
				printf("- ");
			
		
			
	}
}
